.home-container {
  background-color: #f7f7f7;
}
.home-container .search-box {
  position: -webkit-sticky;
  position: sticky;
  top: 0;
  z-index: 999;
  background-color: #0aa671;
}
.home-container .search-box .mini-btn {
  height: 36px;
  line-height: 36px;
  border-radius: 15px;
  margin: 25rpx;
}
.home-container .scroll-item {
  background-color: #ffffff;
  padding: 25rpx;
  margin: 20rpx;
  font-size: 20rpx;
  margin-bottom: 20rpx;
  border-radius: 15rpx;
}
.home-container .scroll-item .pile-title {
  font-size: 25rpx;
  font-weight: bold;
}
.home-container .scroll-item .pile-box {
  margin: 10rpx 0;
  display: flex;
  justify-content: space-between;
}
.home-container .scroll-item .pile-box .price {
  display: flex;
  align-items: center;
}
.home-container .scroll-item .pile-box .price .pri {
  font-size: 30rpx;
  color: #0aa671;
  margin: 0 10rpx;
}
.home-container .scroll-item .pile-box .price .limit {
  color: #adadb3;
  font-size: 20rpx;
}
.home-container .scroll-item .pile-box .resi {
  display: flex;
  font-size: 25rpx;
}
.home-container .scroll-item .pile-box .resi .fast {
  width: 30rpx;
  height: 30rpx;
}
.home-container .scroll-item .pile-box .resi .free {
  font-weight: bold;
  margin: 0 10rpx;
}
.home-container .scroll-item .pile-distance {
  display: flex;
  align-items: center;
}
.home-container .scroll-item .pile-distance .distance {
  font-size: 25rpx;
}
.home-container .scroll-item .pile-distance .navi {
  margin-left: 20rpx;
}
.home-container .scroll-item .pile-distance .navi .location {
  width: 40rpx;
  height: 40rpx;
}
.uni-table-td {
  display: flex;
  align-items: center;
  justify-content: center;
}

